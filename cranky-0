#!/bin/bash -eu

function out()
{
	local rc=${?}

	trap - EXIT INT TERM HUP

	if [ "${rc}" -ne 0 ] ; then
		echo "Script failed" >&2
	fi

	exit "${rc}"
}

function pr_banner()
{
	local txt

	if [ -z "${__COLS:-}" ] ; then
		__COLS=$(tput cols)
	fi
	txt=${*}$(printf "%${__COLS}s")
	echo -e "\033[48;5;160m${txt::${__COLS}}\033[0m"
}

function run()
{
	echo
	pr_banner "${*}"
	"${@}"
}

function shift_ARGS()
{
	if [ ${#ARGS[@]} -eq 0 ] ; then
		HELP=1
		ARG=
		return
	fi

	ARG=${ARGS[0]}
	ARGS=("${ARGS[@]:1}")
}

function source_debian_env()
{
	if [ -z "${DEBIAN:-}" ] ; then
		# shellcheck disable=SC1091
		. debian/debian.env
	fi
}

# ----------------------------------------------------------------------------
# Subcommands

function do_checkout()
{
	source_debian_env

	package=$(dpkg-parsechangelog -l "${DEBIAN}"/changelog -S source)
	series=$(dpkg-parsechangelog -l "${DEBIAN}"/changelog -S distribution)

	run cranky checkout "${series}":"${package}"
}

function do_fix()
{

	source_debian_env

	series=$(dpkg-parsechangelog -l "${DEBIAN}"/changelog -S distribution)
	if [ "${series}" = "UNRELEASED" ] ; then
		echo "Invalid series: ${series}" >&2
		exit 1
	fi

	run cranky fix
}

function do_rebase()
{
	run cranky rebase
}

function do_open()
{
	run git clean -dxf
	run cranky open
}

function do_configs()
{
	run cranky updateconfigs
}

function args_link()
{
	HELP_OPT_ARGS+=("[-s SRU_CYCLE]")
}

function do_link()
{
	run cranky link-tb "${LINK_ARGS[@]}"
}

function do_dkms()
{
	if [ -e ./update-dkms-versions ] ; then
		run /update-dkms-versions
	fi
}

function do_close()
{
	run cranky close
	run cranky tag "${TAG_ARGS[@]}"
}

function do_dependents()
{
	run cranky-update-dependents "${TAG_ARGS[@]}"
}

function do_verify()
{
	run cranky-verify-release-ready
}

function args_build()
{
	if [ -z "${POCKET}" ] ; then
		shift_ARGS
		POCKET=${ARG}
		HELP_POS_ARGS=("POCKET")
	fi
}

function do_build()
{
	run cranky-build-sources -f "${POCKET}"
}

function args_review()
{
	if [ -z "${POCKET}" ] ; then
		shift_ARGS
		POCKET=${ARG}
		HELP_POS_ARGS=("POCKET")
	fi
}

function do_review()
{
	run cranky-review-sources "${POCKET}"
	run cranky-reduce-debdiff

	run cranky-review-sources | less
	run review-debdiff -r | less
}

function args_cbd()
{
	# cbd-cli consumes all remaining arguments
	CBD_ARGS=("${ARGS[@]}")
	ARGS=()
	HELP_POS_ARGS=("[CBD_ARGS]")
}

function do_cbd()
{
	run cbd-cli build "${CBD_ARGS[@]}"
}

function do_push()
{
	local tmp

	run cranky-push-all --dry-run
	echo -n "Push (y|n)? "
	read -r tmp
	if [ "${tmp}" != "y" ] ; then
        exit
	fi

	run cranky-push-all
}

function args_dput()
{
	if [ -z "${PPA}" ] ; then
		shift_ARGS
		PPA=${ARG}
		HELP_POS_ARGS=("PPA")
	fi
}

function do_dput()
{
	run cranky dput-sources "${PPA}"
}

# ----------------------------------------------------------------------------
# Usage

function usage()
{
	echo -n "Usage: $(basename "${0}") [-h]"
	if [ ${#HELP_OPT_ARGS[@]} -gt 0 ] ; then
		printf " %s" "${HELP_OPT_ARGS[@]}"
	fi
	if [ ${#HELP_POS_ARGS[@]} -gt 0 ] ; then
		printf " %s" "${HELP_POS_ARGS[@]}"
	fi
	echo

	cat <<EOF

Ubuntu kernel source package preparation, build, review and upload helper.

Positional arguments:
  CBD_ARGS                  CBD arguments, e.g., -o amd64 -o generic.
  POCKET                    Pocket containing the previous source package.
  PPA                       Build PPA.

Optional arguments:
  -h, --help                Show this help text and exit.
  -s, --sru-cycle SR_CYCLE  SRU cycle name, e.g., 2022.05.30-1.
  -r, --rerun               Rerun 'cranky link-tb' and retag.
EOF
}

# ----------------------------------------------------------------------------
# Main entry point

# Positional subcommand arguments
CBD_ARGS=()
POCKET=
PPA=

# Optional subcommand arguments
LINK_ARGS=()
TAG_ARGS=()

HELP=0
HELP_POS_ARGS=()
HELP_OPT_ARGS=()
ARGS=()

while [ ${#} -gt 0 ] ; do
	case "${1}" in
		-h|--help)
			HELP=1
			;;
		-s|--sru-cycle)
			shift
			LINK_ARGS+=("-s" "${1}")
			;;
		-r|--rerun)
			LINK_ARGS+=("-r")
			TAG_ARGS+=("-f")
			;;
		*)
			ARGS=("${@}")
			break
			;;
	esac
	shift
done

readarray -t CMDS < <(echo "${0##*--}" | tr "-" "\n")

# Parse the provided commandline arguments
for cmd in "${CMDS[@]}" ; do
	if [ "$(type -t args_"${cmd}")" = "function" ]; then
		args_"${cmd}"
	fi
done

if [ ${#ARGS[@]} -ne 0 ] || [ ${HELP} -eq 1 ] ; then
	usage
	exit 2
fi

trap out EXIT INT TERM HUP

# Run the command(s)
for cmd in "${CMDS[@]}" ; do
	do_"${cmd}"
done
