#!/bin/bash -u
#
# Mirror Github raspberrypi/linux to Launchpad juergh/linux-rpi
#

if ! cd "${1}" ; then
    echo "-- Failed to cd to ${1}" >&2
    exit 1
fi

date -R

echo "-- Fetch https://github.com/raspberrypi/linux.git"
git fetch --force https://github.com/raspberrypi/linux.git refs/*:refs/*

# shellcheck disable=SC2010
while IFS= read -r ref ; do
	commit=${ref%% *}
	if ! git for-each-ref refs/tags/ | grep -q "${commit}" ; then
		tag=${ref##*/}-$(date +'%Y-%m-%d')
		echo "-- Create tag ${tag}"
		git tag "${tag}" "${commit}"
	fi
done < <(git for-each-ref refs/heads/ | grep -E '/rpi-[0-9]+\.[0-9]+\.y$')

echo "-- Push to Launchpad"
git push --force git+ssh://juergh@git.launchpad.net/~juergh/+git/linux-rpi refs/*:refs/*

echo "-- Done"
date -R
